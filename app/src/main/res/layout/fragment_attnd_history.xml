<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contentView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgHistoryBackground"
        android:layout_width="190dp"
        android:layout_height="match_parent"
        android:background="@drawable/attendance_history_background" />

    <ImageView
        android:id="@+id/imgNavigateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:foreground="?attr/selectableItemBackground"
        android:padding="5dp"
        android:src="@drawable/menu_icon" />

    <TextView
        android:id="@+id/txtTitleNameFragmentHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgNavigateBtn"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/paytone_one"
        android:text="Attendance\nHistory"
        android:textColor="#fff"
        android:textSize="25sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mRecyclerViewFragmentHistory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txtTitleNameFragmentHistory"
        android:layout_marginTop="20dp" />

    <ImageView
        android:id="@+id/imgNoRecordsAttendHistory"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:src="@drawable/icon_no_records" />

    <TextView
        android:id="@+id/hintMessageAttendHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgNoRecordsAttendHistory"
        android:layout_centerInParent="true"
        android:fontFamily="@font/alegreya_sans"
        android:text="No  history  records  found "
        android:textAlignment="center"
        android:textColor="#FFB60B"
        android:textSize="20sp"
        android:textStyle="bold" />
</RelativeLayout>
